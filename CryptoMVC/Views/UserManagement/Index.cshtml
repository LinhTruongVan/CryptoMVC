@using CryptoMVC.Models
@model UserManagementViewModel
@{
    ViewBag.Title = "Users";
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-8">
        <section id="dataTable">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>...</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in @Model.Users)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.Name</td>
                            <td>
                                @using (Html.BeginForm("DeleteUser", "UserManagement", new { userId = @user.Id }, FormMethod.Post))
                                {
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</div>