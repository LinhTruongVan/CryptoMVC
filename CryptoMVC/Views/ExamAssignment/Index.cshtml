@using CryptoMVC.Models
@model ExamAssignmentViewModel
@{
    ViewBag.Title = "Exam Assignments";
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-8">
        <section id="dataTable">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Deadline</th>
                    <th>...</th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var exam in Model.Exams)
                    {
                        <tr>
                            <td>@exam.Name</td>
                            <td>@exam.Type.ToString()</td>
                            <td>@exam.Deadline</td>
                            <td>Start</td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</div>